{% extends 'adminTemplate.html.twig' %}
{% block title %}Ajouter Formation - Dashboard{% endblock %}
{% block content %}
    <h1>Ajouter une formation</h1>
    <form action="/admin/formation/add"  method="post">

        <div class="form-group">
            <input type="hidden" value="{{ session._sf2_attributes.token }}" id="formtoken" name="formtoken"/>
        </div>
        <div class="form-group">
            <label for="title">Diplôme</label><br/>
            <input type="text" id="name" name="name" value="" class="form-control" required/>
        </div>
        <div class="form-row">
            <div class="col">
                <label for="chapo">Ecole</label><br/>
                <input type="text" id="school" name="school" value="" class="form-control" required/>
            </div>
            <div class="col">
                <label for="chapo">Lieu</label><br/>
                <input type="text" id="place" name="place" value="" class="form-control" required/>
            </div>
        </div>
        <div class="form-group">
            <label for="description">Description</label><br/>
            <textarea id="description" name="description" rows="10" class="form-control" required></textarea>
        </div>
        <div class="form-row">
            <div class="col">
                <label for="startDate">Date début</label><br/>
                <select class="form-control" id="startDate" name="startDate">
                    {% for date in dates %}
                        <option>{{ date }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col">
                <label for="endDate">Date fin</label><br/>
                <select class="form-control" id="endDate" name="endDate">
                    {% for date in dates %}
                        <option>{{ date }}</option>
                    {% endfor %}
                    <option>Présent</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Ajouter">
        </div>

    </form>
{% endblock %}