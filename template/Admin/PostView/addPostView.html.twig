{% extends 'adminTemplate.html.twig' %}
{% block title %}Projets - Dashboard{% endblock %}
{% block content %}

    <h1>Ajouter un Article</h1>
    <p><a href="/admin">Retour Ã  la liste des billets</a></p>

    <form action="/admin/addpost"  method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="author">Auteur</label><br/>
            <input type="text" id="author_id" name="author_id" value="{{ session._sf2_attributes.auth.userid }}" class="form-control" hidden/>
            <input type="hidden" value="{{ session._sf2_attributes.token }}" id="formtoken" name="formtoken"/>
            <input type="text" id="author" name="author" value="{{ session._sf2_attributes.auth.username }}" class="form-control" readonly="readonly"/>
        </div>
        <div class="form-group">
            <label for="title">Titre</label><br/>
            <input type="text" id="title" name="title" value="" class="form-control" required/>
        </div>
        <div class="form-group">
            <label for="chapo">Chapo</label><br/>
            <input type="text" id="chapo" name="chapo" value="" class="form-control" required/>
        </div>
        <div class="form-group">
            <label for="description">Description</label><br/>
            <textarea id="description" name="description" rows="10" class="form-control" required></textarea>
        </div>
        {% for categorie in categories %}
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="{{ categorie.type }}" name="{{ categorie.type }}" value="1">
                <label class="form-check-label" for="inlineCheckbox1">{{ categorie.type }}</label>
            </div>
        {% endfor %}
        <div class="form-group">
            <label for="image">Image :</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/png, image/jpeg, image/webp" required>
        </div>
        <div class="form-group">
            <input type="submit" value="Ajouter">
        </div>

    </form>

{% endblock %}