{% extends 'template.html.twig' %}
{% block title %}Contact - Bastien Moreau{% endblock %}
{% block content %}
    <section class="ftco-section contact-section px-md-4">
        <div class="container">
            <div class="row d-flex mb-5 contact-info">
                <div class="col-md-12 mb-4">
                    <h2 class="h3">Informations de contact</h2>
                </div>
                <div class="w-100"></div>
                <div class="col-lg-6 col-xl-3 d-flex mb-4">
                    <div class="info p-4">
                        <p><i class="fa-solid fa-tree-city"></i><span> Addresse:</span><br> 5 allée du ru jouanne 78120 Rambouillet</p>
                    </div>
                </div>
                <div class="col-lg-6 col-xl-3 d-flex mb-4">
                    <div class="info p-4">
                        <p><i class="fa-solid fa-mobile-screen-button"></i><span> Téléphone:</span><br> <a href="tel://0612345678">06 12 34 56 78</a></p>
                    </div>
                </div>
                <div class="col-lg-6 col-xl-3 d-flex mb-4">
                    <div class="info p-4">
                        <p><i class="fa-solid fa-at"></i><span> Email:</span><br> <a href="mailto:contact@bastienmoreau.com">contact@bastienmoreau.com</a></p>
                    </div>
                </div>
                <div class="col-lg-6 col-xl-3 d-flex mb-4">
                    <div class="info p-4">
                        <p><i class="fa-solid fa-file-lines"></i><span> CV :</span><br> <a href="/cv">Télécharger mon CV</a></p>
                    </div>
                </div>
            </div>
            <div class="row block-9">
                <div class="col-lg-6 d-flex">
                    <form action="/contactForm" method="POST" class="bg-light p-5 contact-form">
                        <div class="form-group">
                            <input type="text" name="name" id="name" class="form-control" placeholder="Votre Nom" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="forename" id="forename" class="form-control" placeholder="Votre Prénom" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="email" id="email" placeholder="Votre Email" required>
                        </div>
                        <div class="form-group">
                            <textarea cols="30" rows="7" class="form-control" name="message" id="message" placeholder="Message" required></textarea>
                        </div>
                        <div class="form-group">

                            <button type="submit" class="btn btn-primary py-3 px-5">Envoyer <i class="fa-solid fa-paper-plane"></i></button>
                        </div>
                    </form>

                </div>

                <div class="col-lg-6 d-flex">
                    <div id="map" class="bg-light"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d42171.17909737093!2d1.7988526444229775!3d48.653879043403755!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e426c4a08b0127%3A0x40b82c3688c3910!2s78120%20Rambouillet!5e0!3m2!1sfr!2sfr!4v1659962887113!5m2!1sfr!2sfr" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}