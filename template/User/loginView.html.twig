{% extends 'template.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block content %}


    <div class="d-flex flex-row align-items-center box">
        <div class="w-50">
            <form enctype="multipart/form-data" method="post" action="/connect" class="p-5 contact-form">
                <h3>Connectez-vous</h3>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nom d'utilisateur" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Mot de passe" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Se connecter" name="inscription" class="btn btn-primary py-3 px-5">
                    <a href="/register" class="text-muted text-decoration-none"><small>ou inscrivez-vous</small></a>
                </div>
            </form>
        </div>
        <div class="w-50 bg_register" style="background-image: url('../../images/image_2.jpg');">

        </div>
    </div>
{% endblock %}